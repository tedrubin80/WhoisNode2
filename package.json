{
  "name": "whois-backend-server",
  "version": "1.0.0",
  "description": "Production WHOIS Intelligence Tool - Backend server for domain analysis and legal workflows",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "node test.js",
    "lint": "eslint *.js",
    "format": "prettier --write *.js",
    "health": "curl -s http://localhost:3001/health | jq",
    "logs": "tail -f logs/combined.log",
    "cache:clear": "node -e \"console.log('Cache cleared on next restart')\"",
    "docker:build": "docker build -t whois-backend .",
    "docker:run": "docker run -p 3001:3001 whois-backend"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "express-rate-limit": "^6.7.0",
    "node-cache": "^5.1.2",
    "whois": "^2.13.5",
    "axios": "^1.6.0",
    "geoip-lite": "^1.4.7"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "eslint": "^8.50.0",
    "prettier": "^3.0.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "whois",
    "domain",
    "dns",
    "intelligence",
    "legal",
    "analysis",
    "backend",
    "api",
    "railway",
    "github-apps"
  ],
  "author": {
    "name": "Legal Tech Developer",
    "email": "developer@example.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/whois-backend-server.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/whois-backend-server/issues"
  },
  "homepage": "https://github.com/yourusername/whois-backend-server#readme",
  "config": {
    "port": 3001,
    "cache_ttl": 21600,
    "rate_limit": 300,
    "max_bulk_domains": 10
  },
  "optionalDependencies": {
    "pm2": "^5.3.0"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2021": true
    },
    "extends": "eslint:recommended",
    "rules": {
      "no-console": "off",
      "no-unused-vars": "warn"
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5"
  }
}